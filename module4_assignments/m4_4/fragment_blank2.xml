<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BlankFragment2">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SIGN-UP FORM"
        android:gravity="center"
        android:layout_marginTop="40dp"
        android:textStyle="bold"
        android:textSize="40sp"

        />


    <TextView
        android:id="@+id/t1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="First Name \t\t\t\t\t: "
        android:layout_marginTop="150dp"

        android:layout_marginLeft="10dp"
        />

    <TextView
        android:id="@+id/t2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Last Name \t\t\t\t\t: "

        android:layout_marginTop="180dp"
        android:layout_marginLeft="10dp"
        />

    <TextView
        android:id="@+id/t3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email \t\t\t\t\t\t\t\t\t: "
        android:layout_marginTop="210dp"
        android:layout_marginLeft="10dp"
        />

    <TextView
        android:id="@+id/t4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mobile no \t\t\t\t\t\t: "
        android:layout_marginTop="240dp"
        android:layout_marginLeft="10dp"
        />
    <TextView
        android:id="@+id/t5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password  \t\t\t\t\t: "
        android:layout_marginTop="270dp"
        android:layout_marginLeft="10dp"
        />

    <TextView
        android:id="@+id/t6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Conf. Password \t: "
        android:layout_marginTop="300dp"
        android:layout_marginLeft="10dp"
        />

    <EditText
        android:id="@+id/e1"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="Enter First Name"
        android:layout_toRightOf="@id/t1"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="130dp"
        />
    <EditText
        android:id="@+id/e3"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="Enter Last Name"
        android:layout_toRightOf="@id/t2"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="160dp"
        />
    <EditText
        android:id="@+id/e4"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="Enter Email"
        android:layout_toRightOf="@id/t2"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="190dp"
        android:textSize="15dp"
        />
    <EditText
        android:id="@+id/e5"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="Enter Mobile no"
        android:layout_toRightOf="@id/t2"
        android:layout_marginLeft="150dp"

        android:layout_marginTop="220dp"
        android:inputType="number"
        />
    <EditText
        android:id="@+id/e6"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="Enter Password"
        android:inputType="textPassword"
        android:layout_toRightOf="@id/t2"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="250dp"
        />
    <EditText
        android:id="@+id/e7"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="Enter Conform Pass"
        android:inputType="textPassword"
        android:layout_toRightOf="@id/t2"
        android:layout_marginLeft="150dp"

        android:layout_marginTop="280dp"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Redistration"
        android:layout_marginTop="350dp"
        />

</FrameLayout>